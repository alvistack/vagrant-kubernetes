        "sudo chmod a+r /boot/vmlinuz*",
        "sudo virt-customize -a \"$_IMAGE.convert\" --delete \"/var/lib/systemd/random-seed\" --firstboot-command \"ansible-playbook /etc/ansible/playbooks/verify.yml\"",
